<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.intel.intellabs.spl.contextsense.ContextSensingActivity">

    <TextView
        android:text="MQTT Broker IP:PORT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMQTT"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:text=""
        android:ems="10"
        android:id="@+id/txtBrokerIP"
        android:layout_alignBaseline="@+id/txtMQTT"
        android:layout_alignBottom="@+id/txtMQTT"
        android:layout_toEndOf="@+id/txtMQTT"
        android:layout_marginStart="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Sensing"
        android:id="@+id/btnEnableSensing"
        android:onClick="btnEnableSensing_onClick"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnStopDaemon"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Sensing"
        android:id="@+id/btnDisableSensing"
        android:onClick="btnDisableSensing_onClick"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnEnableSensing"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Daemon"
        android:id="@+id/btnStopDaemon"
        android:onClick="btnStopDaemon_onClick"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/btnDaemon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MQTT status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMQTTStatus"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtBrokerIP"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Daemon"
        android:id="@+id/btnDaemon"
        android:layout_marginTop="28dp"
        android:onClick="btnDaemon_onClick"
        android:layout_below="@+id/txtMQTTStatus"
        android:layout_alignEnd="@+id/btnStopDaemon" />
</RelativeLayout>
